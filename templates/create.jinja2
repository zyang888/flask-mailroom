{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name-input">Name:</label><input id="name-input" type="text" name="name"><br>
    <label for="amount-input">Amount:</label><input id="amount-input" type="text" name="amount"><br>
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}